<head>
  <link href="https://fonts.googleapis.com/css?family=Gloria+Hallelujah" rel="stylesheet">
  <style media="screen">

  .bckg_img{
    background-position: center bottom;
    background-repeat: no-repeat;
    background-size: cover;
    height: 240px;
    width: 100%;
  }
  body{
    font-size: 30px;
    font-family: 'Gloria Hallelujah', cursive;
  }
  h1{
    font-size: 65px;
  }
  </style>
</head>

<body>

  <h1 class="text-center">Welcome to Anilog<small> A Social App for Pets</small></h1>

  <div class="bckg_img">
    <img src="http://storage.torontosun.com/v1/dynamic_resize/sws_path/suns-prod-images/1297569965911_ORIGINAL.jpg?quality=80&size=420x" alt="pets_using_laptop" />
  </div>

<!-- Form for user to sign in or sign up -->
   <%= form_tag sessions_path,{:class => 'form-horizontal'} do %>
       <div class="row"><legend class="col-md-4 col-md-offset-4">Sign In:</legend></div>
       <fieldset>
           <div class="form-group">
               <%= label_tag :email, 'Email', class: 'col-md-4 control-label' %>
               <div class="col-md-5">
                   <%= text_field_tag :email, params[:email], class: 'form-control' %>
               </div>
           </div>
           <div class="form-group">
               <%= label_tag :password, 'Password', class: 'col-md-4 control-label' %>
               <div class="col-md-5">
                   <%= password_field_tag :password, nil, class: 'form-control' %>
               </div>
           </div>
           <div class="form-group">
               <div class="col-md-8 col-md-offset-4">
                   <%= submit_tag 'Login', class: 'btn btn-success' %>
                   <%= link_to "Don't have an account?", new_user_path, class: 'btn btn-primary' %>
               </div>
           </div>
       </fieldset>
   <% end %>

</body>
