<h1>Meet...</h1>

<hr>
<%= image_tag @user.photo.url(:medium) %> <br>
Name:     <%= @user.name %> <br>
Age:      <%= @user.age %> <br>
Breed:    <%= @user.species %> <br>
About Me: <%= @user.bio %> <br>

<%= form_for @status do |f| %>
<%= f.text_area :body, placeholder: 'What are you up to?' %><br>
<%= f.submit %>
<% end %>

<% @user.statuses.each do |s| %>
  <hr>
  <%= s.body %>
  <%= link_to "Show", status_path(s) %>
<% end %>

<hr>

<%= link_to 'All Anilogs', users_path %> <br>

<%= link_to 'Edit Profile', edit_user_path %>
