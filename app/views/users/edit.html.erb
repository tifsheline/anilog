<head>

  <link href="https://fonts.googleapis.com/css?family=Gloria+Hallelujah" rel="stylesheet">
  <style media="screen">

    body{
      font-size: 30px;
      font-family: 'Gloria Hallelujah', cursive;
}
    h1{
      font-size: 50px;
}
  </style>

</head>

<body>

<h1>Edit Your Profile</h1>

<%= link_to 'Go Back', user_path(@user) %>

<!--  form for editing user profiles-->
<%= form_for @user do |f| %>
  <strong>Name:</strong> <%= f.text_field :name, placeholder: 'name', class: 'form-control' %> <br>
  <strong>Breed:</strong> <%= f.text_field :species, placeholder: 'breed', class: 'form-control' %> <br>
  <strong>Age:</strong>  <%= f.text_field :age, placeholder: 'age', class: 'form-control' %> <br>
  <strong>Bio:</strong>  <%= f.text_area :bio, placeholder: 'bio', class: 'form-control' %> <br>
  <%= f.submit 'Update Profile' %>
<% end %>

</body>
